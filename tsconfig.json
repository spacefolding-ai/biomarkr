{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/*",
        "app/types/*"
      ]
    },
    "jsx": "react-native",
    "lib": [
      "es6",
      "dom"
    ],
    "types": [
      "react",
      "react-native",
      "expo"
    ],
    "esModuleInterop": true
